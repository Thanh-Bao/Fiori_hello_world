<mvc:View
    controllerName="sap.ui.demo.walkthrough.controller.InvoiceList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <List
        id="invoiceList"
        class="sapUiResponsiveMargin"
        width="auto"
        items="{
            path : 'invoice2>/Invoices',
            sorter : {
				path : 'ShipperName',
				group : true
			}
        }">
        <headerToolbar>
            <Toolbar>
                <Title text="{i18n>invoiceListTitle}" />
                <ToolbarSpacer />
                <SearchField width="50%" search=".onFilterInvoices" />
            </Toolbar>
        </headerToolbar>
        <items>
            <ObjectListItem
                title="{invoice2>Quantity} x {invoice2>ProductName}"
                number="{
		parts: [
            {path: 'invoice2>ExtendedPrice'}, {
                path: 'view>/currency'}
                ],
		type: 'sap.ui.model.type.Currency',
		formatOptions: {
			showMeasure: false
		}
		}"
                numberUnit="{view>/currency}"
                numberState="{= ${invoice2>ExtendedPrice} > 50 ? 'Error' : 'Success' }"
                type="Navigation"
                press="onPress"
            >
                <firstStatus>
                    <ObjectStatus
                        text="
    {
    path: 'invoice2>Status' ,
    formatter: '.formatter.statusText'
    }" />
                </firstStatus>
            </ObjectListItem>


        </items>
    </List>
</mvc:View>